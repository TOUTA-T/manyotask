<div class="page-header">
<h1>ログイン画面</h1>
</div>

<div>
  <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
    <%= f.email_field :email, placeholder:"メールアドレスを入力" %><br>
    <%= f.password_field :password, placeholder:"パスワードを入力" %><br>
    <%= f.submit "Log in", class:"button" %>
  <% end %>
</div>
