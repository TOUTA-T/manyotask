<h1>タスク一覧</h1>
<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td><%= t.details %></td>
        <td><%= link_to '詳細確認', task_path(t) %></td>
        <td><%= link_to '編集', edit_task_path(t) %></td>
        <td><%= link_to '削除', task_path(t), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
