<h1><%= t('view.task') %></h1>
<p><%= notice %></p>
<table>
  <thead>
    <tr>
      <th><%= t('view.name') %></th>
      <th><%= t('view.detail') %></th>
      <th><%= t('view.daytime') %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td><%= t.detail %></td>
        <td><%= t.created_at.to_s %></td>
        <td><%= link_to t('view.show'), task_path(t) %></td>
        <td><%= link_to t('view.edit'), edit_task_path(t) %></td>
        <td><%= link_to t('view.delete'), task_path(t), method: :delete, data: { confirm: t('view.confilm_delete') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<li><%= link_to t('view.new'), new_task_path %></li>
