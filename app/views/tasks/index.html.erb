<h1><%= t('view.task') %></h1>
<p><%= notice %></p>
<table>
  <thead>
    <tr>
      <th><%= t('view.index') %></th>
      <th><%= t('view.name') %></th>
      <th><%= t('view.detail') %></th>
      <th><%= t('view.daytime') %></th>
      <th><%= t('view.deadline') %><button type="button" class="btn btn-default btn-xs"><%= link_to '近い順', tasks_path(deadline_sort: :true) %></button></th>
      <th><%= t('view.status') %><button type="button" class="btn btn-default btn-xs"><%= link_to '高い順', tasks_path(status_sort: :true) %></button></th>
      <th><%= t('view.pri') %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each_with_index do |t,idx| %>
      <tr class="task_list">
        <td><%= idx + 1 %></td>
        <td><%= t.name %></td>
        <td><%= t.detail %></td>
        <td><%= t.created_at.to_s %></td>
        <td><%= t.deadline.to_s(:date) %></td>
        <td><%= t.status %></td>
        <td><%= t.priority %></td>
        <td><%= link_to t('view.show'), task_path(t) %></td>
        <td><%= link_to t('view.edit'), edit_task_path(t) %></td>
        <td><%= link_to t('view.delete'), task_path(t), method: :delete, data: { confirm: t('view.confilm_delete') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= form.submit "変更を保存する" %>
<li><%= link_to t('view.new'), new_task_path %></li>
