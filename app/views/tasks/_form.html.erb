<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name,t('views.input_task') %><br>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :detail,t('views.input_detail')%><br>
    <%= form.text_area :detail %>
  </div>
  <div class="field">
    <%= form.label :deadline,t('views.deadline')%><br>
    <%= form.date_field :deadline %>
  </div>
  <div class="field">
    <%= form.label :priority,t('views.pri')%>
    <%= form.select :priority,[["高","高"],["中","中"],["低","低"]], include_blank: "選択して下さい" %>
  </div>
  <div class="field">
    <%= form.label :status,t('views.status')%><br>
    <%= form.select :status,[["完了","完了"],["着手中","着手中"],["未着手","未着手"]], include_blank: "選択して下さい" %>
  </div>
  <div class="actions">
    <%= form.submit t('views.submit') %>
  </div>
<% end %>
