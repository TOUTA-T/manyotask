<div class="page-header">
<h1>ユーザー新規登録</h1>
</div>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="login">
  <%= form_with(model: @user, local: true) do |f| %>
    <%= f.text_field :name, placeholder:"ユーザー名を入力" %><br>
    <%= f.email_field :email, placeholder:"メールアドレスを入力" %><br>
    <%= f.password_field :password, placeholder:"パスワードをを入力(6文字以上)" %><br>
    <%= f.password_field :password_confirmation, placeholder:"確認用にもう一度パスワードを入力してください" %><br>
    <%= f.submit "アカウント作成", class:"button" %>
  <% end %>
</div>
